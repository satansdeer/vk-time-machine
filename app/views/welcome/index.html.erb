<h1>Vk-time-machine</h1>
<% if not @user %>
  <%= link_to @vk_url, class: 'btn btn-primary' do %>
    <i class="icon-home icon-white"></i>
    Войти через ВКонтакте
  <% end %>
<% end %>
<% if @user %>
  <%= image_tag @user[:photo] %>
  <%= @user[:first_name] %>
  <%= @user[:last_name] %>
<% end %>
